@model appVentas.Presentacion.ViewModels.ProductoViewModel

@{
    ViewBag.Title = "EditarProducto";
}

<h2>Editar Producto</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("ActualizarProducto", "Producto", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Codigo</label>
                            @Html.TextBoxFor(m => m.productoBE.CodProd, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Producto</label>
                            @Html.TextBoxFor(m => m.productoBE.NomProd, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Grupo</label>
                            @Html.DropDownListFor(model => model.productoBE.CodGrup, new SelectList(Model.listGrupoBE, "CodGrup", "NomGrup"), "Choose... ", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Linea</label>
                            @Html.DropDownListFor(model => model.productoBE.CodLin, new SelectList(Model.listLineaBE, "CodLin", "NomLin"), "Choose... ", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Marca</label>
                            @Html.TextBoxFor(m => m.productoBE.Marca, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Costo</label>
                            @Html.TextBoxFor(m => m.productoBE.CosPromC, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Precio Venta</label>
                            @Html.TextBoxFor(m => m.productoBE.PrecioVta, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <input type="submit" name="Actualizar" value="Actualizar" class="btn btn-warning" />
                            @if (ViewBag.message != "")
                            {
                                <span class="badge badge-danger">@ViewBag.message</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



