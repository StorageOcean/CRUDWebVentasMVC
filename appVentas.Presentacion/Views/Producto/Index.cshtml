@model appVentas.Presentacion.ViewModels.ProductoViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Producto CRUD Operations</h2>
@Html.ActionLink("Nuevo Producto", "NuevoProducto", new { }, new { @class = "btn btn-primary pull-right" })
<br />
<br />
<table class="table table-striped table-hover">
    <tr>
        <th>Codigo</th>
        <th>Producto</th>
        <th>Marca</th>
        <th>Costo Prom.</th>
        <th>Precio Vta.</th>
        <th></th>
    </tr>
    @foreach (var item in Model.listProductoBE)
    {
        <tr>
            <td>@item.CodProd</td>
            <td>@item.NomProd</td>
            <td>@item.Marca</td>
            <td>@item.CosPromC</td>
            <td>@item.PrecioVta</td>
            <td>
                <a class="btn btn-warning glyphicon glyphicon-edit"
                   href="@Url.Action("EditarProducto","Producto",new {idProducto=@item.CodProd })"></a>
                <a class="btn btn-danger glyphicon glyphicon-trash"
                   href="@Url.Action("EliminarProducto","Producto",new {idProducto=@item.CodProd })"></a>
            </td>
        </tr>
    }

</table>

